<?xml version="1.0"?>
<configuration>
    <property name="GENERAL_LOG_FILE_NAME" value="internauta-service" />
    <property name="ANALYTICS_LOG_FILE_NAME" value="internauta-analytics" />
    <property name="FIRMA_LOG_FILE_NAME" value="internauta-firma" />
    <property name="DOWNLOADER_LOG_FILE_NAME" value="internauta-downloader" />
    <property name="MASTERJOBS_LOG_FILE_NAME" value="internauta-masterjobs" />
    <property name="VERSATORE_LOG_FILE_NAME" value="internauta-versatore" />
    <property name="LOG_DIR" value="./logs" />
    <property name="LOG_DIR_ARCHIVE" value="./logs/archive" />
    <property name="PATTERN" value="%cyan(%d{yyyy-MM-dd HH:mm:ss.SSS}) %magenta([%thread]) %highlight(%-5level) %green(%logger{35}) - %msg%n" />

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
<!--            <Pattern>
                %black(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] %blue(%C{1.}): %msg%n%throwable
            </Pattern>-->
            <Pattern>
                ${PATTERN}
            </Pattern>
        </layout>
    </appender>

    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${GENERAL_LOG_FILE_NAME}.log</file>
        <append>true</append>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                ${PATTERN}
            </Pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">                                         
            <fileNamePattern>${LOG_DIR_ARCHIVE}/${GENERAL_LOG_FILE_NAME}_%d{yyyy-MM-dd}.log.gz</fileNamePattern>
        </rollingPolicy>
    </appender>
    <appender name="analytics_file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${ANALYTICS_LOG_FILE_NAME}.log</file>
        <append>true</append>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                ${PATTERN}
            </Pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">                                         
            <fileNamePattern>${LOG_DIR_ARCHIVE}/${ANALYTICS_LOG_FILE_NAME}_%d{yyyy-MM-dd}.log.gz</fileNamePattern>
        </rollingPolicy>
    </appender>
    <appender name="firma_file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${FIRMA_LOG_FILE_NAME}.log</file>
        <append>true</append>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                ${PATTERN}
            </Pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">                                         
            <fileNamePattern>${LOG_DIR_ARCHIVE}/${FIRMA_LOG_FILE_NAME}_%d{yyyy-MM-dd}.log.gz</fileNamePattern>
        </rollingPolicy>
    </appender>
    <appender name="downloader_file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${DOWNLOADER_LOG_FILE_NAME}.log</file>
        <append>true</append>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                ${PATTERN}
            </Pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">                                         
            <fileNamePattern>${LOG_DIR_ARCHIVE}/${DOWNLOADER_LOG_FILE_NAME}_%d{yyyy-MM-dd}.log.gz</fileNamePattern>
        </rollingPolicy>
    </appender>
    <appender name="masterjobs_file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${MASTERJOBS_LOG_FILE_NAME}.log</file>
        <append>true</append>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                ${PATTERN}
            </Pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">                                         
            <fileNamePattern>${LOG_DIR_ARCHIVE}/${MASTERJOBS_LOG_FILE_NAME}_%d{yyyy-MM-dd}.log.gz</fileNamePattern>
        </rollingPolicy>
    </appender>
    <appender name="versatore_file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${VERSATORE_LOG_FILE_NAME}.log</file>
        <append>true</append>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                ${PATTERN}
            </Pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">                                         
            <fileNamePattern>${LOG_DIR_ARCHIVE}/${VERSATORE_LOG_FILE_NAME}_%d{yyyy-MM-dd}.log.gz</fileNamePattern>
        </rollingPolicy>
    </appender>
    <!-- additivity=false ensures analytics data only goes to the analytics log -->
    <logger name="*" level="info" additivity="false">
        <appender-ref ref="file"/>
    </logger>
    <logger name="analytics" level="info" additivity="false">
        <appender-ref ref="analytics_file"/>
    </logger>
    <logger name="it.bologna.ausl.internauta.utils.firma" level="info" additivity="true">
        <appender-ref ref="firma_file"/>
    </logger>
    <logger name="it.bologna.ausl.internauta.utils.downloader" level="info" additivity="true">
        <appender-ref ref="downloader_file"/>
    </logger>
    <logger name="it.bologna.ausl.internauta.utils.masterjobs" level="info" additivity="true">
        <appender-ref ref="masterjobs_file"/>
    </logger>
    <logger name="it.bologna.ausl.internauta.utils.versatore" level="info" additivity="false">
        <appender-ref ref="versatore_file"/>
    </logger>

    <springProfile name="dev">
    <root level="info">
        <appender-ref ref="console" />
    </root>
    </springProfile>

    <springProfile name="test">
    <root level="info">
        <appender-ref ref="file"/>
    </root>
    </springProfile>

    <springProfile name="stage">
    <root level="info">
        <appender-ref ref="file"/>
    </root>
    </springProfile>

    <springProfile name="prod">
    <root level="info">
        <appender-ref ref="file"/>
    </root>
    </springProfile>
</configuration>